<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="408dp"
        android:layout_height="740dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="48dp">

        <LinearLayout
            android:id="@id/search_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="31dp"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:layout_weight=".5"
                android:text="TextView"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/playlist_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:layout_weight="1"
                android:text="TextView"
                android:textAlignment="center"
                android:textSize="20sp" />

            <Button
                android:id="@+id/search_button"
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:layout_margin="5sp"
                android:layout_weight="0.5"
                android:backgroundTint="@color/BtnBcColor"
                app:icon="@drawable/search" />


        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/now_playing_menu"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        tools:layout_editor_absoluteX="30dp">

        <ImageButton
            android:id="@+id/play_btn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginHorizontal="12dp"
            android:background="@drawable/btn_bcgnd"
            android:src="@drawable/baseline_play_arrow_24" />

        <ImageView
            android:id="@+id/nowPlayingImage"
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:layout_weight=".2"
            app:srcCompat="@drawable/cover" />

        <TextView
            android:id="@+id/nowPlayingName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:text="TextView" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="24dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/now_playing_menu">

        <Button
            android:id="@+id/mainBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#00FFFFFF"
            android:text="Main"
            android:textColor="#000000"
            android:textStyle="bold" />

        <Button
            android:id="@+id/searchBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#00FFFFFF"
            android:text="Search"
            android:textColor="#000000" />

        <Button
            android:id="@+id/playlistBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#00FFFFFF"
            android:text="Playlists"
            android:textColor="#000000" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>